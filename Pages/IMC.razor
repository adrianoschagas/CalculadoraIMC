@page "/IMC"

<h1>Calculadora de IMC</h1>

<label for="altura">Altura (m):</label>
<input @bind="altura" type="number" id="altura"  placeholder="Digite sua altura"><br><br>        
<label for="peso">Peso (kg):</label>
<input @bind="peso" type="number" id="peso" placeholder="Digite seu peso"><br><br> 

<label>O seu IMC é Igual à <span>@IndiceCorporalIMC.ToString("F2")</span></label><br><br>

@if (IndiceCorporalIMC < 18.5)
{
    <label>Você está abaixo do peso ideal</label><br><br>
    <label>O recomendado é que seu peso seja entre @Math.Round(pesoIdealMinimo, 2) kg e @Math.Round(pesoIdealMaximo, 2) kg</label><br>
}
else if (IndiceCorporalIMC >= 18.5 && IndiceCorporalIMC <= 24.9)
{
    <label>Você está dentro do seu peso ideal</label><br><br>
    <label>O recomendado é que seu peso seja entre @Math.Round(pesoIdealMinimo, 2) kg e @Math.Round(pesoIdealMaximo, 2) kg</label><br>
}
else if (IndiceCorporalIMC >= 25 && IndiceCorporalIMC <= 29.9)
{
    <label>Você está com peso em excesso</label><br><br>
    <label>O recomendado é que seu peso seja entre @Math.Round(pesoIdealMinimo, 2) kg e @Math.Round(pesoIdealMaximo, 2) kg</label><br>
}
else if (IndiceCorporalIMC >= 30 && IndiceCorporalIMC <= 34.9)
{
    <label>Você está com Obesidade Grau 1</label><br><br>
    <label>O recomendado é que seu peso seja entre @Math.Round(pesoIdealMinimo, 2) kg  e @Math.Round(pesoIdealMaximo, 2) kg</label><br>
}
else if (IndiceCorporalIMC >= 35 && IndiceCorporalIMC <= 39.9)
{
    <label>Você está com obesidade Grau 2 (Severa)</label><br><br>
    <label>O recomendado é que seu peso seja entre @Math.Round(pesoIdealMinimo, 2) kg e @Math.Round(pesoIdealMaximo, 2) kg</label><br>
}
else
{
    <label>Você está com obesidade Grau 3 (Mórbida)</label><br><br>
    <label>O recomendado é que seu peso seja entre @Math.Round(pesoIdealMinimo, 2) kg e @Math.Round(pesoIdealMaximo, 2) kg</label><br>
}

<br>

<button type="button" @onclick="CalcularIMC">Calcular IMC</button>

@code {

    private double altura { get; set; }
    private double peso { get; set; }

    private double pesoIdealMaximo { get; set; }

    private double pesoIdealMinimo { get; set; }

    private double IndiceCorporalIMC { get; set; }


    private void CalcularIMC()
    {
        IndiceCorporalIMC = peso/(altura*altura);
        pesoIdealMaximo = 24.9 * (altura * altura);
        pesoIdealMinimo = 18.6 * (altura * altura);  

        StateHasChanged();
    }   
    
}
